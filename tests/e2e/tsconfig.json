{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "@playwright/test"],
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
