# .env.staging.example

# Frontend Environment Variables
VITE_API_URL=https://api.staging.rentguy.com/v1
VITE_APP_MODE=staging

# Backend Database Configuration
DATABASE_URL=postgresql://username:password@staging-db.rentguy.com:5432/rentguy_staging

# JWT Authentication Settings
JWT_SECRET=long_random_secure_staging_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=120

# Redis Connection for Caching
REDIS_URL=redis://staging-redis.rentguy.com:6379/0

# SMTP Email Configuration
SMTP_HOST=smtp.staging.rentguy.com
SMTP_PORT=587
SMTP_USER=staging-smtp-user
SMTP_PASS=secure_smtp_password

# CORS Allowed Origins
CORS_ORIGINS=https://staging.rentguy.com,https://admin-staging.rentguy.com
