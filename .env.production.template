# RentGuy Enterprise Platform - Production Environment Variables
# Copy this file to .env.production and fill in the values
# Secrets should be retrieved from OpenBao

# ============================================
# General Configuration
# ============================================
VERSION=1.0.0
DOMAIN=rentguy.sevensa.nl
ENVIRONMENT=production

# ============================================
# Frontend (Vite)
# ============================================
VITE_APP_MODE=planner
VITE_API_BASE_URL=https://rentguy.sevensa.nl/api
VITE_WS_BASE_URL=wss://rentguy.sevensa.nl/ws

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=rentguy_production
POSTGRES_USER=rentguy
POSTGRES_PASSWORD=  # Retrieve from OpenBao: openbao kv get secret/rentguy/database

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=  # Retrieve from OpenBao: openbao kv get secret/rentguy/redis

# ============================================
# JWT & Security
# ============================================
JWT_SECRET_KEY=TEMPORARY_JWT_SECRET_FOR_BYPASS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=7

# ============================================
# Keycloak Integration
# ============================================
# KEYCLOAK_URL=https://keycloak.sevensa.nl
KEYCLOAK_REALM=rentguy
KEYCLOAK_CLIENT_ID=rentguy-backend
# KEYCLOAK_CLIENT_SECRET=  # Retrieve from OpenBao: openbao kv get secret/rentguy/keycloak

# ============================================
# OpenBao Integration
# ============================================
OPENBAO_ADDR=https://openbao.sevensa.nl
OPENBAO_TOKEN=  # Service token for RentGuy
OPENBAO_NAMESPACE=rentguy

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=  # Retrieve from OpenBao
SMTP_PASSWORD=  # Retrieve from OpenBao
EMAIL_FROM=noreply@rentguy.nl

# ============================================
# Customer Portal
# ============================================
CUSTOMER_PORTAL_BASE_URL=https://rentguy.sevensa.nl/portal

# ============================================
# Recurring Invoices
# ============================================
INVOICE_SCHEDULER_ENABLED=true
INVOICE_EMAIL_FROM=invoices@rentguy.nl

# ============================================
# Online Booking
# ============================================
BOOKING_THEMES_ENABLED=true
BOOKING_PAYMENT_PROVIDER=mollie
MOLLIE_API_KEY=  # Retrieve from OpenBao: openbao kv get secret/rentguy/mollie

# ============================================
# Sub-Renting Module
# ============================================
SUBRENTING_API_KEY=  # Retrieve from OpenBao: openbao kv get secret/rentguy/subrenting
SUBRENTING_WEBHOOK_SECRET=  # Retrieve from OpenBao

# ============================================
# Monitoring & Logging
# ============================================
SENTRY_DSN=  # Optional: Sentry for error tracking
LOG_LEVEL=INFO

# ============================================
# Backup Configuration
# ============================================
BACKUP_KEEP_DAYS=30
BACKUP_KEEP_WEEKS=8
BACKUP_KEEP_MONTHS=12

